<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab240" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="android:overScrollMode">never</item>

        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>

        <item name="snackbarStyle">@style/snackbar</item>
        <item name="snackbarButtonStyle">@style/snackbarButton</item>
    </style>

    <style name="snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/snackbarOverlay</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="background">@drawable/bottom_sheet_button</item>
    </style>

    <style name="snackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="snackbarOverlay" parent="">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnSurface">@color/purple_700</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">7dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
    </style>
</resources>