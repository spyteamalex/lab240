<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/getterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gettersNSV"
        app:layout_constraintEnd_toEndOf="@+id/gettersNSV"
        app:layout_constraintStart_toStartOf="@+id/gettersNSV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/settersNSV"
        app:layout_constraintEnd_toEndOf="@+id/settersNSV"
        app:layout_constraintStart_toStartOf="@+id/settersNSV"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/gettersNSV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/space1"
        app:layout_constraintEnd_toStartOf="@+id/settersNSV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/getterLabel">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/getters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:flexWrap="wrap" />
    </androidx.core.widget.NestedScrollView>

    <Space
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gettersNSV" />

    <androidx.core.widget.NestedScrollView
        android:id="@id/settersNSV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/space2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gettersNSV"
        app:layout_constraintTop_toBottomOf="@id/setterLabel">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/setters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:flexWrap="wrap" />

    </androidx.core.widget.NestedScrollView>

    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settersNSV" />

</androidx.constraintlayout.widget.ConstraintLayout>